<UserControl x:Class="ViewTemplateConfigFilterNet8.Forms.View.PatternAndLineCut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:ViewTemplateConfigFilterNet8.Forms.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewTemplateConfigFilterNet8.Forms.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:InverseBooleanConverter x:Key="BoolToEnable"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <!--Red Color-->
        <Label Grid.Row="0" Content="LINE CORES:" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="5,0,5,0">
            <CheckBox Content="NÃO APLICAR" 
              IsChecked="{Binding IsDoNotApply, Mode=TwoWay}"
              Margin="0,0,5,0"/>
            
            <!--Red Color-->
            <Label Content="Intensidade cor vermelha:"
                     FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CA" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                    Minimum="0"
                    Maximum="255"
                    TickFrequency="1" 
                    TickPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    Margin="0,0,15,0"                               
                    Value="{Binding RedIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                   Width="60"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Text="{Binding RedIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                   IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>

            <!--Green Color-->
            <Label Content="Intensidade cor verde:" 
           FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CB" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                    Minimum="0"
                    Maximum="255"
                    TickFrequency="1" 
                    TickPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    Margin="0,0,15,0"                               
                    Value="{Binding GreenIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                 Width="60"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Text="{Binding GreenIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                 IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>

            <!--Blue Color-->
            <Label Content="Intensidade cor azul:" 
           FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CC" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                    Minimum="0"
                    Maximum="255"
                    TickFrequency="1" 
                    TickPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    Margin="0,0,15,0" 
                    Value="{Binding BlueIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}"
               >
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                 Width="60"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Text="{Binding BlueIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                 IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>
            <Rectangle Height="30"
               StrokeThickness="2"
               Stroke="Gray"
               Fill="{Binding ColorPreview, UpdateSourceTrigger=PropertyChanged}"
               Margin="0,10,0,10"/>

            <ComboBox Text=""
                      FontSize="12"
                      ItemsSource="{Binding LinePatternsCollection}"
                      SelectedItem="{Binding SelectedLinePattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">                
            </ComboBox>

            <Grid Margin="5,5,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width ="70"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Escolha a espessura da linha:" FontSize="12" HorizontalAlignment="Right"/>

                <Grid Grid.Column="1" Height="23"  VerticalAlignment="Top" HorizontalAlignment="Right">
                    <TextBox Text="{Binding LineWeightString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="45" 
                             Margin="0,2,22,3"/>
                    <Button FontSize="10" 
                            Padding="0,-4,0,0" 
                            Content="▲" 
                            Width="10" 
                            Margin="34,2,0,13" 
                            Command="{Binding IncreaseLineWeightCommand}"/>
                    
                    <Button FontSize="10" 
                            Padding="0,-4,0,0" 
                            Content="▼" 
                            Width="10" 
                            Margin="34,12,0,3" 
                            Command="{Binding DecreaseLineWeightCommand}"/>
                </Grid>
                <!--https://stackoverflow.com/questions/841293/where-is-the-wpf-numeric-updown-control-->
            </Grid>

        </StackPanel>
        
        
    </Grid>
</UserControl>
