<UserControl x:Class="ViewTemplateConfigFilterNet8.Forms.View.FiltersAndWorksetPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:conv="clr-namespace:ViewTemplateConfigFilterNet8.Forms.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewTemplateConfigFilterNet8.Forms.View"
             mc:Ignorable="d"
             FontSize="12">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" 
                           x:Name="WaterMarkLabel" 
                           Content="{TemplateBinding Tag}" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed" 
                           Foreground="Gray" 
                           FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <conv:BoolToVisibilityHiddenConverter x:Key="BoolToVisibilityHidden"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="FILTROS:" FontWeight="Bold"/>

        <StackPanel Grid.Row="1">
            <CheckBox Content="NOVO FILTRO"
                      IsChecked="{Binding IsNewFilter, Mode=TwoWay}"
                      Margin="0,0,5,0"/>

            <TextBox TextAlignment="Center"
                     Style="{StaticResource MyWaterMarkStyle}"
                     Text="{Binding FilterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Digite o nome filtro"
                     IsEnabled="{Binding BolEnableFilterName}"
                     Margin="0,5,5,0"/>

            <ComboBox ItemsSource="{Binding FiltersCollection}"
                      SelectedItem="{Binding SelectedFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Visibility="{Binding BolVisibilityFilterComboBox, Converter={StaticResource BoolToVisibilityHidden}}"
                      Margin="0,10,5,0"/>
        </StackPanel>

        <Separator Grid.Row="2" Margin="0,10,0,15"/>
        <StackPanel Grid.Row="3">

            <Label Content="WORKSET:" FontWeight="Bold"/>

            <CheckBox Content="NOVO WORKSET"
                      IsChecked="{Binding IsNewWorkset, Mode=TwoWay}"                                  
                      Margin="0,5,5,0"/>

            <TextBox TextAlignment="Center"
                     Style="{StaticResource MyWaterMarkStyle}"
                     Text="{Binding WorksetName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Tag="Digite o nome Workset"
                     IsEnabled="{Binding BolEnableWorksetName}"
                     Margin="0,5,5,0"/>

            <ComboBox ItemsSource="{Binding WorksetsCollection}"
                      SelectedItem="{Binding SelectedWorkset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Visibility="{Binding BolVisibilityWorksetComboBox, Converter={StaticResource BoolToVisibilityHidden}}"  
                      Margin="0,10,5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
