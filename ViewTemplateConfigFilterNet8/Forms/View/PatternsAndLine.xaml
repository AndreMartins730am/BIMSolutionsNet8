<UserControl x:Class="ViewTemplateConfigFilterNet8.Forms.View.PatternsAndLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:ViewTemplateConfigFilterNet8.Forms.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewTemplateConfigFilterNet8.Forms.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:InverseBooleanConverter x:Key="BoolToEnable"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="PATTERN CORES:" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Margin="5,0,5,0">
            <CheckBox Content="NÃO APLICAR" 
                          IsChecked="{Binding IsDoNotApply, Mode=TwoWay}"
                          Margin="0,0,5,0"/>
            
            <!--Red Color-->
            <Label Content="Intensidade cor vermelha:" 
                       FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CA" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                                Minimum="0"
                                Maximum="255"
                                TickFrequency="1" 
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,15,0"                               
                                Value="{Binding RedIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                               Width="60"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Text="{Binding RedIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                               IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>

            <!--Green Color-->
            <Label Content="Intensidade cor verde:" 
                       FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CB" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                                Minimum="0"
                                Maximum="255"
                                TickFrequency="1" 
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,15,0"                               
                                Value="{Binding GreenIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                             Width="60"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Text="{Binding GreenIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                             IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>
            
            <!--Blue Color-->
            <Label Content="Intensidade cor azul:" 
                       FontSize="12"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="Gr1CC" Grid.Column="0" HorizontalAlignment="Stretch">
                    <Slider DockPanel.Dock="Left"
                                Minimum="0"
                                Maximum="255"
                                TickFrequency="1" 
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                Margin="0,0,15,0" 
                                Value="{Binding BlueIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}"
                           >
                    </Slider>
                </StackPanel>
                <TextBox Grid.Column="1"
                             Width="60"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Text="{Binding BlueIntensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                               
                             IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
                </TextBox>
            </Grid>
            <Rectangle Height="30"
                           StrokeThickness="2"
                           Stroke="Gray"
                           Fill="{Binding ColorPreview, UpdateSourceTrigger=PropertyChanged}"
                           Margin="0,10,0,10"/>
            
            <ComboBox Text="--Escolha um Pattern--" 
                          FontSize="12"
                          ItemsSource="{Binding PatternsCollection}"
                          SelectedItem="{Binding SelectedPattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                          
                          IsEnabled="{Binding IsDoNotApply, Converter={StaticResource BoolToEnable}}">
            </ComboBox>
        </StackPanel>

    </Grid>
</UserControl>
